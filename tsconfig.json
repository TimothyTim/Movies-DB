{
    "compilerOptions": {
        "allowJs": true,
        "allowUnreachableCode": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es6",
            "scripthost",
            "es2017",
            "es2015.promise"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noEmit": true,
        "noImplicitAny": false,
        "outDir": "./dist/",
        "strict": true,
        "sourceMap": true,
        "target": "es6",
        "types": [
            "node",
            "webpack-env",
            "jest",
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "./jest-setup.ts"
    ]
}
